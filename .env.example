# Database
DATABASE_URL=postgresql://spynet:spynet@localhost:5432/spynet
POSTGRES_USER=spynet
POSTGRES_PASSWORD=spynet
POSTGRES_DB=spynet

# Redis
REDIS_URL=redis://localhost:6379

# ClickHouse
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=spynet
CLICKHOUSE_USER=spynet
CLICKHOUSE_PASSWORD=spynet

# MinIO (S3-compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=spynet
MINIO_USE_SSL=false

# Auth
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=30d
JWT_ALGORITHM=HS256

# LLM / AI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
LLM_ORCHESTRATOR_URL=http://localhost:8000

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_PREFIX=/v1

# Environment
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_CORS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Geolocation
MAPBOX_TOKEN=your-mapbox-token
LOCATION_ACCURACY_THRESHOLD_METERS=100

# BLE
BLE_BEACON_ROTATION_INTERVAL_SECONDS=60
BLE_BEACON_TTL_SECONDS=120

# Mission System
MISSION_EXPIRY_DEFAULT_SECONDS=14400
MISSION_GENERATION_COOLDOWN_SECONDS=300
MAX_ACTIVE_MISSIONS_PER_PLAYER=5

# Zone Control
ZONE_CONTROL_UPDATE_INTERVAL_SECONDS=30
ZONE_CAPTURE_WINDOW_HOURS=24
ZONE_CAPTURE_THRESHOLD_DEFAULT=1000

# QR Codes
QR_SCAN_RATE_LIMIT_PER_MINUTE=10
QR_JWT_EXPIRY_SECONDS=86400

# Safety
BLACKLISTED_ZONES=
CURFEW_START_HOUR=22
CURFEW_END_HOUR=6
ENABLE_LOCATION_VERIFICATION=true

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_DOUBLE_AGENTS=true
ENABLE_FACTION_WARS=true
ENABLE_REMOTE_MISSIONS=true
ENABLE_AI_MISSIONS=true
