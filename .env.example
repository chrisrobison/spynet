# Database
DATABASE_URL=postgresql://spynet:spynet@localhost:5432/spynet
POSTGRES_USER=spynet
POSTGRES_PASSWORD=spynet
POSTGRES_DB=spynet

# Redis
REDIS_URL=redis://localhost:6379

# ClickHouse
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=spynet
CLICKHOUSE_USER=spynet
CLICKHOUSE_PASSWORD=spynet

# MinIO (S3-compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=spynet
MINIO_USE_SSL=false

# Auth
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=30d
JWT_ALGORITHM=HS256

# LLM / AI Configuration
# Active LLM provider to use (openai, anthropic, local, custom)
LLM_ACTIVE_PROVIDER=openai

# Provider 1: OpenAI (GPT-4)
LLM_OPENAI_ENABLED=true
LLM_OPENAI_API_KEY=your-openai-api-key-here
LLM_OPENAI_BASE_URL=https://api.openai.com/v1
LLM_OPENAI_MODEL=gpt-4
LLM_OPENAI_MAX_TOKENS=2000
LLM_OPENAI_TEMPERATURE=0.7

# Provider 2: Anthropic (Claude)
LLM_ANTHROPIC_ENABLED=false
LLM_ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
LLM_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
LLM_ANTHROPIC_MAX_TOKENS=4096
LLM_ANTHROPIC_TEMPERATURE=0.7

# Provider 3: Local LLM (Ollama, LM Studio, etc.)
LLM_LOCAL_ENABLED=false
LLM_LOCAL_API_KEY=not-required
LLM_LOCAL_BASE_URL=http://localhost:11434/v1
LLM_LOCAL_MODEL=llama3.1:70b
LLM_LOCAL_MAX_TOKENS=4096
LLM_LOCAL_TEMPERATURE=0.7

# Provider 4: Custom OpenAI-compatible endpoint
LLM_CUSTOM_ENABLED=false
LLM_CUSTOM_API_KEY=your-custom-api-key-here
LLM_CUSTOM_BASE_URL=https://your-custom-endpoint.com/v1
LLM_CUSTOM_MODEL=your-model-name
LLM_CUSTOM_MAX_TOKENS=2000
LLM_CUSTOM_TEMPERATURE=0.7

# Orchestrator Service
LLM_ORCHESTRATOR_URL=http://localhost:8000

# LLM Behavior Settings
LLM_DEFAULT_TIMEOUT_MS=30000
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY_MS=1000

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_PREFIX=/v1
API_URL=http://localhost:3000

# Admin Dashboard
ADMIN_PORT=3001
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Environment
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_CORS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Geolocation
MAPBOX_TOKEN=your-mapbox-token
LOCATION_ACCURACY_THRESHOLD_METERS=100

# BLE
BLE_BEACON_ROTATION_INTERVAL_SECONDS=60
BLE_BEACON_TTL_SECONDS=120

# Mission System
MISSION_EXPIRY_DEFAULT_SECONDS=14400
MISSION_GENERATION_COOLDOWN_SECONDS=300
MAX_ACTIVE_MISSIONS_PER_PLAYER=5

# Zone Control
ZONE_CONTROL_UPDATE_INTERVAL_SECONDS=30
ZONE_CAPTURE_WINDOW_HOURS=24
ZONE_CAPTURE_THRESHOLD_DEFAULT=1000

# QR Codes
QR_SCAN_RATE_LIMIT_PER_MINUTE=10
QR_JWT_EXPIRY_SECONDS=86400

# Safety
BLACKLISTED_ZONES=
CURFEW_START_HOUR=22
CURFEW_END_HOUR=6
ENABLE_LOCATION_VERIFICATION=true

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_DOUBLE_AGENTS=true
ENABLE_FACTION_WARS=true
ENABLE_REMOTE_MISSIONS=true
ENABLE_AI_MISSIONS=true
